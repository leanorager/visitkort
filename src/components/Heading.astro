---
const { htmlheading = "h2", size = "medium" } = Astro.props;
const Htmlheading = htmlheading;

// Alle heading-varianter bruger heading-font og text-farve
const baseClasses = "font-heading text-text uppercase";

// Variabler for de forskellige størrelser
const sizeClasses = {
  // Giant → fylder viewport-bredden
  giant: "text-[10vw] leading-none",

  // Large → 148px på desktop
  large: "text-4xl md:text-6xl lg:text-[148px] leading-tight",

  // Medium → 116px på desktop
  medium: "text-3xl md:text-5xl lg:text-[116px] leading-tight",
};
---

<Htmlheading class={`${baseClasses} ${sizeClasses[size]}`}>
  <slot />
</Htmlheading>